{
	"name": "cognito-keycloak",
	"version": "1.0.0",
	"description": "AWS Cognito wrapper for Keycloak - local development tool",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"dependencies": {
		"@hono/node-server": "^1.13.0",
		"@keycloak/keycloak-admin-client": "^26.4.7",
		"hono": "^4.6.0"
	},
	"devDependencies": {
		"@aws-sdk/client-cognito-identity-provider": "^3.700.0",
		"@biomejs/biome": "2.3.11",
		"@types/node": "^22.0.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.0",
		"vitest": "^2.1.0"
	}
}
